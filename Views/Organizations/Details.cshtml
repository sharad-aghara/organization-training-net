@model WebApplication1.Models.Organization

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <br />
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<br />

<div>
    <h4>Trainings</h4>
    <hr />
    @if (Model.Training != null && Model.Training.Any())
    {
        <ol>
            @foreach (var training in Model.Training)
            {
                <li>
                    @training.TrainingDate - @training.PlaceOfTraining
                    <!-- Display other properties of Training as needed -->
                </li>
            }
        </ol>
    }
    else
    {
        <p>No trainings available for this organization.</p>
    }
</div>
<br />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
