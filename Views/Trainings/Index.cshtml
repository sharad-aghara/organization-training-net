@model IEnumerable<WebApplication1.Models.Training>

@{
    ViewData["Title"] = "Trainings Index";
}

<h1>Trainings Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped" id="TableOne">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceOfTraining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurposeOfTraining)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceOfTraining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurposeOfTraining)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
