@model WebApplication1.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<br />
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Organization)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Organization.Name)
        </dd>
    </dl>
</div>
<br />

<div>
    <h2>Trainings</h2>
    <hr />
    @if (Model.TrainingEmployees != null && Model.TrainingEmployees.Any())
    {
        <ol>
            @foreach (var trainingEmployee in Model.TrainingEmployees)
            {
                <li>
                    @trainingEmployee.Training.TrainingDate - @trainingEmployee.Training.PurposeOfTraining - @trainingEmployee.Training.PlaceOfTraining
                    <!-- Display other properties of Training as needed -->
                </li>
            }
        </ol>
    }
    else
    {
        <p>No trainings assigned to this employee.</p>
    }
</div>
<br />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
